需要研究的东西
export default {
  getUrlParameter: function (name) {
    let regex = '[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)'
    let url = location.href
    let regExp = new RegExp(regex)
    let arr = regExp.exec(url)
    if (arr) {
      return arr[1].replace(/\+/g, '%20')
    } else {
      return null
    }
  }
}
