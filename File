<template>
  <div class="file">
    <section class="item">
      <img :src="getImg(type)" />
      <span class="img-name">{{name}}</span>
    </section>
    <i class="icon"
       :class="icon"
       @click="emitClick"></i>
  </div>
</template>

<script>
import excel from "@/assets/images/icon-excel.png";
import word from "@/assets/images/icon-word.png";
import ppt from "@/assets/images/icon-ppt.png";
import pdf from "@/assets/images/icon-pdf.png";
import img from "@/assets/images/icon-pic.png";
import zip from "@/assets/images/icon-zip.png";
import mp4 from "@/assets/images/icon-mp4.png";
import txt from "@/assets/images/icon-txt.png";

export default {
  props: {
    icon: {
      type: String,
      default: "",
    },
    name: "",
    type: "",
    id: {
      type: String,
      default: "",
    },
  },
  data() {
    return {
      imgs: {
        excel,
        doc: word,
        docx: word,
        ppt,
        pptx: ppt,
        pdf,
        xlsx: excel,
        xls: excel,
        png: img,
        PNG: img,
        jpeg: img,
        JPEG: img,
        jpg: img,
        JPG: img,
        rar: zip,
        zip: zip,
        mp4: mp4,
        MP4: mp4,
        txt: txt,
      },
    };
  },
  watch: {
    id: {
      handler(val) {},
    },
    immediate: true,
  },
  methods: {
    emitClick() {
      this.$emit("onClick");
    },
    getImg(type) {
      return this.imgs[type];
    },
  },
};
</script>

<style scoped lang="less" rel="stylesheet/less">
@import "../../assets/const.less";
</style>
